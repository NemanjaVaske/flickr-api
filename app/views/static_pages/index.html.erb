<%= form_with url: "/", method: :get do |form| %>
  <%= form.label :flickr_id, "Flickr ID:" %>
  <%= form.text_field :flickr_id %>
  <%= form.submit "Search Photos" %>
<% end %>

<% unless @photos.nil? %>
  <% @photos.each do |photo| %>
    <img src="https://live.staticflickr.com/<%= photo.server %>/<%= photo.id %>_<%= photo.secret %>_n.jpg">
  <% end %>
<% end %> 